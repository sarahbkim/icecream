<% if logged_in? %>
  <div class="row">
    <h2>Your stats</h2>
    <span><%= @user.name %></span>
    <span><%= @user.email %></span>
  </div>
  <div class="row" ng-controller="StatsCtrl">
    <h3>How much ice cream you ate...</h3>
    <div class="row chart">
      <nvd3-line-chart
        data="checkInCounts"
        showXAxis="true"
        showYAxis="true"
        tooltips="true"
        margin="{left:50,top:50,bottom:50,right:50}"
        x="xFunction()"
        xAxisTickFormat="xAxisTickFormat"
        interactive="true"><svg></svg>
      </nvd3-line-chart>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <h3>Your favorite stores</h3>
      <div>
        <% @user.favorite_shops.each do |shop| %>
          <li><%= IcecreamShop.find(shop.shop_id).name %></li>
        <% end %>
      </div>
    </div>
    <div class="col-md-6">
      <h3>Your Check Ins</h3>
      <ul>
        <% @user.check_ins.each do |check_in| %>
          <li><%= IcecreamShop.find(check_in.shop_id).name %> on <%= check_in.created_at.to_formatted_s(:short) %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
